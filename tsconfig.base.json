{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pomoguru/browser-application": [
        "packages/browser-application/src/index.ts"
      ],
      "@pomoguru/client": [
        "packages/client/src"
      ],
      "@pomoguru/core": [
        "packages/core/src/index.ts"
      ],
      "@pomoguru/node-application": [
        "packages/node-application/src/index.ts"
      ],
      "@server/*": [
        "packages/server/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
