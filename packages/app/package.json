{
  "name": "pomoguru",
  "main": "public/electron.js",
  "homepage": "./",
  "version": "0.5.2",
  "author": "Robert Kostrzewski Robert Raimann Dawid Janiga",
  "description": "Pomoguru gives you focus",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "11.2.2",
    "@testing-library/user-event": "12.6.2",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/shortid": "^0.0.29",
    "@types/styled-components": "^5.1.4",
    "axios": "^0.21.0",
    "date-fns": "^2.16.1",
    "debug": "^4.2.0",
    "dotenv": "8.2.0",
    "electron-is-dev": "^1.2.0",
    "electron-notarize": "1.0.0",
    "electron-store": "^6.0.1",
    "node-mac-notifier": "1.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "react-sweet-state": "^2.4.1",
    "rimraf": "^3.0.2",
    "shortid": "^2.2.16",
    "slack": "^11.0.2",
    "styled-components": "^5.2.0",
    "ts-jest": "26.4.4",
    "typescript": "^4.0.3",
    "update-electron-app": "2.0.1",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "rimraf dist && react-scripts build && NOTARIZE=true NODE_ENV=production yarn build:app",
    "build:app": "yarn electron-builder -c.extraMetadata.main=build/electron.js",
    "test": "jest --watch",
    "test:ci": "jest",
    "release": "dotenv release-it -VV",
    "dev": "concurrently \"BROWSER=none PORT=3007 yarn start\" \"wait-on http://localhost:3007 && electron .\""
  },
  "build": {
    "appId": "com.dawidjaniga.pomoguru",
    "mac": {
      "category": "public.app-category.productivity",
      "publish": [
        "github"
      ]
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "afterSign": "./afterSignHook.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dawidjaniga/pomoguru.git"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "2.0.1",
    "@types/react-router-dom": "^5.1.6",
    "concurrently": "^5.3.0",
    "devtron": "^1.4.0",
    "dotenv-cli": "4.0.0",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "electron-reloader": "^1.0.1",
    "jest-localstorage-mock": "2.4.6",
    "release-it": "14.4.1",
    "wait-on": "^5.2.0"
  }
}
